<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#2211ecd2"
                android:startColor="#2a13bbce"
                android:endColor="#2c3de5f1"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="35dp"
                android:height="35dp"
                />
            <stroke
                android:width="1dp"
                android:color="#7e20c5e2"
                />
        </shape>




</item>
    <item android:state_pressed="true">


        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#aa11ecd2"
                android:startColor="#8913bbce"
                android:endColor="#8a3de5f1"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="35dp"
                android:height="35dp"
                />
            <stroke
                android:width="1dp"
                android:color="#e8017fd2"
                />
        </shape>

    </item>

</selector>
