<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.prosjek.MainActivity"
    android:background="@drawable/pozadina">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oblik1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lay1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raspored"
            android:id="@+id/editText"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:background="@drawable/dugme"
            android:paddingTop="6dp"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:gravity="center_horizontal|center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:text="Matematika I"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="6dp"
                android:textSize="24sp" />

            <TextView
                android:text="13:00-14:30  sala : 207"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtInfo"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:textAlignment="viewEnd"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:text="Operativni sistemi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt21"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="6dp"
                android:textSize="24sp" />

            <TextView
                android:text="12:00-14:30  sala : 227"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ttxt22"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:textAlignment="viewEnd"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:text="Principi programiranja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt21"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:layout_marginLeft="6dp"
                android:textSize="24sp" />

            <TextView
                android:text="14:00-16:15  sala : 019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ttxt22"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:textAlignment="viewEnd"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay1"
        android:gravity="center"

        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LinLayDani"
            android:layout_marginTop="4dp"
            android:padding="11dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp">


            <TextView
                android:text="P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dan1"
                android:layout_weight="1"
                android:background="@drawable/klik2"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="18sp" />

            <TextView
                android:text="U"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dan2"
                android:layout_weight="1"
                android:background="@drawable/dani"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="18sp" />

            <TextView
                android:text="S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dan3"
                android:layout_weight="1"
                android:background="@drawable/klik2"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="18sp" />

            <TextView
                android:text="ÄŒ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dan4"
                android:layout_weight="1"
                android:background="@drawable/klik2"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:padding="10dp" />

            <TextView
                android:text="P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dan5"
                android:layout_weight="1"
                android:background="@drawable/klik2"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                android:padding="10dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:elevation="24dp">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/linear3"
            android:id="@+id/imageView6"
            android:elevation="24dp"
            android:layout_height="2dp" />

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linear1"
            android:paddingTop="22dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dugme"
                android:elevation="24dp"
                android:layout_margin="12dp"
                android:visibility="visible"
                android:weightSum="1">


                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/notif1"
                    android:id="@+id/imageView31"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="33dp" />

                <TextView
                    android:text="Obavestenja"
                    android:layout_width="wrap_content"
                    android:id="@+id/textView38"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="33sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_light"
                    android:layout_marginLeft="90dp"
                    android:textAlignment="viewEnd"
                    android:layout_marginRight="15dp"
                    android:layout_height="100dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dugme"
                android:elevation="24dp"
                android:layout_margin="12dp"
                android:visibility="visible"
                android:weightSum="1">


                <ImageView
                    android:layout_width="50dp"
                    app:srcCompat="@drawable/lista2"
                    android:id="@+id/imageView351"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="33dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:text="Predmeti"
                    android:layout_width="wrap_content"
                    android:id="@+id/textView358"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="33sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_light"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="15dp"
                    android:textAlignment="textEnd"
                    android:layout_height="100dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dugme"
                android:elevation="24dp"
                android:layout_margin="12dp"
                android:visibility="visible"
                android:weightSum="1">


                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_edit"
                    android:id="@+id/imageView3"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="33dp" />

                <TextView
                    android:text="Prosjek"
                    android:layout_width="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="33sp"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/background_light"
                    android:layout_marginLeft="90dp"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="15dp"
                    android:layout_height="100dp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar"
        android:elevation="0dp"
        android:layout_height="53dp">


        <TextView
            android:text="PMF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/txtPmf"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="@android:color/background_light"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:elevation="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/person2"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/linear2"
            android:elevation="0dp" />

    </RelativeLayout>

</RelativeLayout>
